# MorphShop Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# Database Configuration
# ============================================================
DATABASE_URL=postgresql+asyncpg://morphshop:morphshop@localhost:5432/morphshop

# ============================================================
# Redis Configuration
# ============================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================
# JWT Authentication
# ============================================================
# IMPORTANT: Generate a strong secret key for production!
# You can generate one with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# RunningHub API Configuration
# ============================================================
# Get your API key from https://www.runninghub.cn
RUNNINGHUB_API_KEY=your-runninghub-api-key
RUNNINGHUB_BASE_URL=https://www.runninghub.cn

# Application IDs for each workflow
# Configure these after creating applications in RunningHub
RUNNINGHUB_TRY_ON_APP_ID=
RUNNINGHUB_BACKGROUND_APP_ID=
RUNNINGHUB_VIDEO_APP_ID=

# ============================================================
# File Storage Configuration
# ============================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# ============================================================
# Rate Limiting
# ============================================================
RATE_LIMIT_PER_MINUTE=10

# ============================================================
# Usage Limits (Cost Control)
# ============================================================
DAILY_USER_LIMIT_MONEY=10.0
DAILY_USER_LIMIT_TASKS=50
GLOBAL_BALANCE_WARNING=100.0
MAX_TASK_TIMEOUT=3600

# ============================================================
# CORS Configuration
# ============================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# ============================================================
# Debug Mode
# ============================================================
DEBUG=false
